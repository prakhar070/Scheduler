<div class="container">
    <form action="/interviews" class="mb-3">
        <div class="row">
            <div class="offset-md-3"></div>
            <div class="col-md-5">
                <h5 class="mb-3"><strong> Select month & year to view your schedules </strong></h5>
            </div>
        </div>
        <div class="row">
            <div class="offset-md-3"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <input type="month" id="monthyear" name="monthyear" class="form-control" required>
                </div>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">submit</button>
            </div>
            <div class="offset-md-2"></div>
    </form>
</div>
<hr />
<%= render partial:"calender", locals: @details %>

<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create a new interview </h4>
      </div>
        <div class="modal-body">
            <%= form_for Interview.new do |f| %>
                <div class="form-group">
                    <%= f.label :tstamp, "Interview Date and Time" %><br />
                    <%= f.time_select :tstamp, :ignore_date => true, class: "form-control" %>
                </div>

                <div class="form-group">

                    <%= f.label "Add Participants" %><br />
                    <select class="custom-select form-control" name="participants[]" multiple>
                        <%= User.all.each do |participant| %>
                        <option value="<%= participant.id %>"><%= participant.firstname.concat(" ").concat(participant.lastname) %></option>
                        <% end %>
                    </select>
                    <small id="optionHelp" class="form-text text-muted">Hold ctrl Key to add multiple participants</small>

                </div>
                <%= f.submit "Schedule" , class: "btn btn-primary" %>
            <% end %>
        </div>
            
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<div class="container">
    <% if @interview && @interview.errors.full_messages.any? %>
        <% @interview.errors.full_messages.each do |error_message| %>
          <p id="error-message"><%= error_message if @interview.errors.full_messages.first == error_message %> </p>
        <% end %>
    <% end %>
    <%= render partial:"/partials/header_form"%>
    <div class="offset-md-4"></div>
</div>

<hr />
<div class="container">
    <div class="row">
        <% if @details[:day].present? %>
        <div class="col-md-8">
            <%= render partial:"/partials/calender", locals: @details %>
        </div>
        <div class="col-md-4">
            <% if @interviews.count > 0 %>
              <h1 class="text-center"> List of Interviews </h1>
            <% else %>
              <h1 class="text-center"> No Interviews </h1>
            <% end %>
            <%= render partial:"/partials/interviews", locals: {interviews: @interviews, details: @details, edit_interview: @edit_interview} %>
        </div>

        <% else %>
        <div class="col-md-12">
            <%= render partial:"/partials/calender", locals: @details %>
        </div>
        <% end %>
    </div>
</div>

<%= render partial:"/partials/modal" %>